{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug 6.0",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/TAN.Core.6.0.Example.GraphQL/bin/Debug/net6.0/TAN.Core.6.0.Example.GraphQL.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TAN.Core.6.0.Example.GraphQL",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Run All Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "test",
            "program": "${workspaceFolder}/TAN.Core.6.0.Example.IntegrationTest/bin/Debug/net6.0/TAN.Core.6.0.Example.IntegrationTest.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TAN.Core.6.0.Example.IntegrationTest",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Test"
            }
        }
    ]
}